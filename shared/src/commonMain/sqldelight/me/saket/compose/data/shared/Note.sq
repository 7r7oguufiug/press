import com.benasher44.uuid.Uuid;
import com.soywiz.klock.DateTime;

CREATE TABLE note (
  id TEXT AS Uuid NOT NULL PRIMARY KEY,
  title TEXT NOT NULL,
  body TEXT NOT NULL,
  createdAt TEXT AS DateTime NOT NULL,
  updatedAt TEXT AS DateTime NOT NULL,
  deletedAt TEXT AS DateTime
);

CREATE INDEX note_title ON note(title);
CREATE INDEX note_body ON note(body);

selectAll:
SELECT *
FROM note
ORDER BY createdAt DESC;