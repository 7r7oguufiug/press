import com.benasher44.uuid.Uuid;
import com.soywiz.klock.DateTimeTz;

CREATE TABLE note (
  id TEXT AS Uuid NOT NULL PRIMARY KEY,
  content TEXT NOT NULL,
  createdAt TEXT AS DateTimeTz NOT NULL,
  updatedAt TEXT AS DateTimeTz NOT NULL,
  deletedAt TEXT AS DateTimeTz
);

CREATE INDEX note_content ON note(content);

selectAll:
SELECT *
FROM note
ORDER BY createdAt DESC;